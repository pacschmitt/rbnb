<div class="page-container">
  <div class="booking-form">
      <div class="form-container col-lg-12">
      <div class="form-inputs col-lg-10 text-center">
          <h1>Create Booking</h1>
          <%= simple_form_for([@gear, @booking]) do |f| %>
          <%= f.input :start_date, as: :date, input_html: {class: "search-bar"} %>
          <%= f.input :end_date, as: :date, input_html: {class: "search-bar"} %>
          <%= f.submit class: "btn btn-paco" %>
          <% end %>
        </div>
      </div>
        <div class="align-items-center text-center mt-4"><%= link_to "Back", gear_path(@gear), class: "btn btn-paco" %></div>
  </div>
</div>
