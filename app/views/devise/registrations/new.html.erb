<div class="page-container">
  <div class="form-container col-lg-12">
    <div class="text-center">
      <h2 class="m-3">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs col-lg-8">
          <%= f.input :first_name, input_html: {class: "search-bar"} %>
          <%= f.input :last_name, input_html: {class: "search-bar"} %>
          <%= f.input :photo, as: :file, input_html: {class: "search-bar"} %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "search-bar" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "search-bar" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: "search-bar" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-alfo m-2" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
