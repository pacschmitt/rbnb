<div class="page-container">
  <div class="log-in">
      <div class="form-container col-lg-12">
          <div class="text-center ">
            <h2 class="m-3">Log in</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
              data: {turbo: false}) do |f| %>
              <div class="form-inputs col-lg-6">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" }, input_html: { class: "search-bar"} %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" }, input_html: { class: "search-bar"} %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-paco mb-2" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
      </div>
  </div>
</div>
